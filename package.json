{
  "name": "node-api-template",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "_moduleAliases": {
    "@common": "src/common"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --config .prettierrc --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_CONFIG_DIR='./config' nest start",
    "start:dev": "NODE_CONFIG_DIR='./config' nest start --watch",
    "start:debug": "NODE_CONFIG_DIR='./config' nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix && prettier --check \"src/**/*.ts\" \"test/**/*.ts\" --write",
    "check:format": "eslint \"{src,apps,libs,test}/**/*.ts\" && prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "TS_NODE_FILES=true TS_NODE_PROJECT=./tsconfig.json ts-mocha --paths --config mocharc.yaml",
    "test:cov": "TS_NODE_FILES=true TS_NODE_PROJECT=./tsconfig.json nyc --reporter=lcov --nycrc-path ./test/.nycrc.yaml ts-mocha --paths --config ./mocharc.yaml",
    "validate": "npm run check:format && npm run test && npm run build"
  },
  "dependencies": {
    "@nestjs/common": "^8.2.6",
    "@nestjs/config": "^1.1.7",
    "@nestjs/core": "^8.2.6",
    "@nestjs/event-emitter": "^1.0.0",
    "@nestjs/platform-express": "^8.2.6",
    "@nestjs/platform-fastify": "^8.2.6",
    "@newrelic/winston-enricher": "^2.1.0",
    "axios": "^0.25.0",
    "axios-retry": "^3.2.4",
    "config": "^3.3.7",
    "js-yaml": "^4.1.0",
    "module-alias": "^2.2.2",
    "opossum": "^6.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.4",
    "snake-camel": "^1.0.8",
    "winston": "^3.5.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.0",
    "@nestjs/schematics": "^8.0.6",
    "@nestjs/testing": "^8.2.6",
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.0.0",
    "@types/opossum": "^6.2.0",
    "@types/sinon": "^10.0.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "chai": "^4.3.6",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.2.0",
    "nock": "^13.2.4",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "sinon": "^13.0.1",
    "supertest": "^6.2.2",
    "ts-loader": "^9.2.6",
    "ts-mocha": "^9.0.2",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  }
}
